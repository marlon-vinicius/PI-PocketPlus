// Executar `npx prisma generate` toda vez que modificar o schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Categoria {
  Moradia
  Alimentacao
  Lazer
  Transporte
  Saude
}

model Usuario {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  profissao       String         
  email           String         @unique
  senha           String
  transacaoIds    String[]       @db.ObjectId
  // transacoes      Transacao[]
}

model Transacao {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
 // usuarioId       String         @db.ObjectId
 // usuario         Usuario        @relation(fields: [usuarioId], references: [id])
  //categoriaId     String         @db.ObjectId
  categoria       Categoria
  tipo            String
  descricao       String?
  valor           Int
  data            String     
}